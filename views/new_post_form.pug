extends layout

block content
  h1 New Post Form
  p

    form(method='POST' action='')
      div.form-group
        label(for='message_title') Title:
        input#message_title.form-control(type='text' placeholder='Title' name='message_title' required='true')

        label(for='message_text') Body:
        input#message_text.form-control(type='text' placeholder='Text' name='message_text' required='true')
      
        button.btn.btn-primary(type='submit') Submit Post
    if errors 
      ul
      for error in errors
        li!= error.msg