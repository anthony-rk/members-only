extends layout

block content
  h1= title
  if user
    p(class='welcome-user') Welcome back #{user.username}!
    p Enter the password to become a member.

    form(method='POST' action='')
      div.form-group
        label(for='admin_password') Become an Admin:
        input#admin_password.form-control(type='password' placeholder='???' name='admin_password' required='true' )
          
        button.btn.btn-primary(type='submit') Submit

    if errors 
      ul
        for error in errors
          li!= error.msg
  else 
    p Please Login or Sign up to Participate.
    a(href='/users/sign-up') Sign Up