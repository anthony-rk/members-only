extends layout

block content
  P User Log In
    //- if locals.messages.error
    //-   h1 #{locals.messages.error}
  

    form(method='POST' action='')
      div.form-group
        label(for='username') User Name:
        input#username.form-control(type='text' placeholder='User name' name='username' required='true' )

        label(for='password') Password:
        input#password.form-control(type='password' placeholder='Password' name='password' required='true' )
      
      
        button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg