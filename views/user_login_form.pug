extends layout

block content
  P User Log In
  

    form(method='POST' action='')
      div.form-group
        label(for='user_name') User Name:
        input#user_name.form-control(type='text' placeholder='User name' name='user_name' required='true' )

        label(for='password') Password:
        input#password.form-control(type='password' placeholder='Password' name='password' required='true' )
      
      
        button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg